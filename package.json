{
  "name": "agrest",
  "version": "2.0.0",
  "description": "Simply stupid i18n library",
  "main": "es5/agrest.js",
  "scripts": {
    "test": "mocha --compilers js:babel/register",
    "watch": "mocha --watch --compilers js:babel/register",
    "es5": "mkdir -p es5 && babel lib/agrest.js -s inline -m umd --module-id agrest -o es5/agrest.js",
    "build": "npm run es5 && uglifyjs es5/agrest.js -o es5/agrest.min.js --mangle --screw-ie8 -c join_vars,unsafe,pure_getters",
    "prepublish": "npm run build"
  },
  "author": "Evgeny Shpilevsky <evgeny@shpilevsky.com>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "chai": "^3.3.0",
    "mocha": "^2.3.3",
    "uglify-js": "^2.4.24"
  },
  "repository": "git@github.com:ftdebugger/agrest.git"
}
